super + f
	firefox

super + Return
	alacritty

super + d
	discord

# close window
super + c
	bspc node -k

# toggle monocle
super + m
	bspc desktop -l next

# swap current with largest
super + g
	bspc node -s biggest.window

# focus in specific direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# move node in specific direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# focus next node
super + n
	bspc node -f next.local.!hidden.window

# focus previous node
super + shift + n
	bspc node -f {next,prev}.local.!hidden.window

# focus on numbered desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'
